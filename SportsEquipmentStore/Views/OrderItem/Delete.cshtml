@model SportsEquipmentStore.Models.OrderItem

<h1>Delete Order Item</h1>
<h3>Are you sure you want to delete this order item?</h3>

<div>
    <h4>Order ID: @Model.Order.Id</h4>
    <h4>Equipment: @Model.Equipment.Name</h4>
    <p>Quantity: @Model.Quantity</p>
    <p>Price: @Model.Price.ToString("C")</p>
    <p>Total Price: @(Model.Quantity * Model.Price).ToString("C")</p>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

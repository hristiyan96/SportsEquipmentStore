@model SportsEquipmentStore.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <!-- Product Image -->
                <img src="~/images/products/@Model.ImageUrl"
                     class="card-img-top"
                     alt="@Model.Name"
                     style="height: 300px; object-fit: cover;" />

                <!-- Product Details -->
                <div class="card-body text-center">
                    <h2 class="card-title mb-3">@Model.Name</h2>
                    <p class="card-text text-muted mb-3">@Model.Description</p>

                    @if (Model.Discount > 0)
                    {
                        <p class="text-danger fw-bold">
                            @($"{Model.Discount:0.00}")% OFF
                        </p>
                        <p>
                            <span class="text-decoration-line-through text-muted">
                                $@(Model.Price.HasValue ? $"{Model.Price.Value:0.00}" : "N/A")
                            </span>
                            <span class="ms-2 text-success fw-bold">
                                $@(Model.Price.HasValue ? $"{(Model.Price.Value * (1 - Model.Discount / 100)):0.00}" : "N/A")
                            </span>
                        </p>
                    }
                    else
                    {
                        <p class="fw-bold">$@(Model.Price.HasValue ? $"{Model.Price.Value:0.00}" : "N/A")</p>
                    }
                </div>

                <!-- Back Button -->
                <div class="card-footer text-center">
                    <a href="javascript:history.back()" class="btn btn-secondary">Back</a>

                </div>
            </div>
        </div>
    </div>
</div>

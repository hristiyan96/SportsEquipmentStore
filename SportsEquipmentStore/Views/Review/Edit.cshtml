@model SportsEquipmentStore.Models.Review

<h1>Edit Review</h1>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="EquipmentId"></label>
        <select asp-for="EquipmentId" asp-items="@(new SelectList(ViewBag.Equipments, "Id", "Name"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="CustomerId"></label>
        <select asp-for="CustomerId" asp-items="@(new SelectList(ViewBag.Customers, "Id", "FirstName"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@model IEnumerable<SportsEquipmentStore.Models.Product>

@{
    ViewData["Title"] = $"Sports - {ViewBag.SportCategory}";
    var sportCategory = ViewBag.SportCategory;
}

<h1 class="mb-4">Sports - @sportCategory.ToUpper()</h1>

<div class="row">
    <div class="col-md-3">
        <!-- Categories Section -->
        <h5>Categories</h5>
        <ul class="list-group mb-4">
            <li class="list-group-item"><a href="/Sports/Index?sportCategory=Basketball">Basketball</a></li>
            <li class="list-group-item"><a href="/Sports/Index?sportCategory=Football">Football</a></li>
            <li class="list-group-item"><a href="/Sports/Index?sportCategory=Running">Running</a></li>
            <li class="list-group-item"><a href="/Sports/Index?sportCategory=Skiing">Skiing</a></li>
            <li class="list-group-item"><a href="/Sports/Index?sportCategory=Volleyball">Volleyball</a></li>
        </ul>

        <!-- Filters -->
        <h5>Filters</h5>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="newProducts">
            <label class="form-check-label" for="newProducts">New products</label>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="onlineOnly">
            <label class="form-check-label" for="onlineOnly">Only online</label>
        </div>
    </div>

    <div class="col-md-9">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning">No products available for @sportCategory.</div>
        }
        else
        {
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card h-100 shadow-sm">
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                            <div class="card-body text-center">
                                <h6 class="fw-bold">@product.Name</h6>
                                <p class="text-muted">@product.Brand</p>
                                <p class="text-danger fw-bold">$@product.Price</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
